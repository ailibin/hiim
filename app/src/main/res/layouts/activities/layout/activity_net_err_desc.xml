<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="@string/hint_net_desc_1"
        android:textColor="@color/black6"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/hint_net_desc_set_wifi_label"
            android:textColor="@color/black3"
            android:textSize="14sp" />

        <View
            style="@style/line"
            android:layout_marginLeft="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/hint_net_desc_wifi_set"
            android:textColor="@color/black6"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/hint_net_desc_set_mobile_network_label"
            android:textColor="@color/black3"
            android:textSize="14sp" />

        <View
            style="@style/line"
            android:layout_marginLeft="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/hint_net_desc_set_mobile_network"
            android:textColor="@color/black6"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/hint_net_desc_set_permission_label"
            android:textColor="@color/black3"
            android:textSize="14sp" />

        <View
            style="@style/line"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/tv_net_permission_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/hint_net_desc_set_permission"
            android:textColor="@color/black6"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_set_net"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_retry_selector"
        android:minHeight="40dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/set_now" />
</LinearLayout>
