<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_location_custom_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:background="@drawable/btn_radius_15"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_item_location_custom_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="生命的奇迹"
        android:textColor="@color/black3"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_item_location_custom_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="生命的奇迹"
        android:textColor="@color/black6"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv_item_location_custom_message_mapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:minHeight="40dp"
        android:scaleType="centerCrop" />

</LinearLayout>
